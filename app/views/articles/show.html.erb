<div class="row z-depth-3">
  <div class="col s12 m12">
    <div class="card grey lighten-3">
      <div class="card-content black-text">
        <div class="center-align">
          <p>Article created by <%= link_to @article.user.username.upcase, user_path(@article.user)%></p> <br>
          <%= gravatar_for(@article.user)%><br>
          <small>created <%= time_ago_in_words(@article.created_at)%> ago | last updated: <%= time_ago_in_words(@article.updated_at)%>
            ago
          </small>
          <br>
        </div>
        <span class="card-title center-align"><%= @article.title%></span>
              <br>
              <br>
        <p><%= @article.description%></p>
      </div>
      <div class="card-action">
        <%if logged_in? && current_user == @article.user%>
          <%= link_to 'Edit article', edit_article_path(@article)%>
          <%= link_to 'Delete article', article_path(@article), method: :delete, data: { confirm: "Are you sure?" }%>
        <%else%>
          <p>Thanks for reading</p>
        <%end%>
      </div>
    </div>
  </div>
</div>
<%= link_to 'Back to articles', articles_path, class: "btn pink lighten-2"%>
